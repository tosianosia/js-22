{{#each this}}
  <li class='gallery__item'>
    <div class='gallery__thumb'>
      <img src='{{flag}}' alt='Флаг {{name}}' width='320' />
    </div>
    <h2>{{name}}</h2>
    <p><b>Столица:</b> {{capital}}</p>
    <p><b>Валюта:</b> {{currency}}</p>
    <p><b>Официальный язык:</b> {{language}}</p>
    <p><b>Население:</b> {{population}} человек</p>
  </li>
{{/each}}

